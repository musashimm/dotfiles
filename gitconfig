[user]
  name = Wojciech Todryk
  email = wojciech@todryk.pl

[core]
  excludesfile = ~/.gitignore_global
  filemode = false

[alias]
  pl = pull --rebase
  ci = commit -m
  cia = commit --all -m
  st = status
  push = push origin master
  psall = push --all origin
  aa = add --all
  stuno = status -uno
  br = branch
  bra = branch -a -v
  lg = log --all --graph --decorate --pretty=format:"%Cgreen%cr\\ %C(yellow)%h%C(auto)%d\\ %Creset%s%Cblue\\ [%cn]"
  lgs = log --summary --stat
  lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
  la = "!git config -l | grep alias | cut -c 7-"
  rso = remote show origin
  rson = remote show origin -n
  ctags = !.git/hooks/ctags
  start = "!git diff HEAD^ --name-only|xargs ls -la | awk '{print $7}'|sort"
[color]
  ui = true
[push]
  default = simple
[init]
  templatedir = ~/.git_template
[merge]
  ff = only
[fetch]
  prune = true
